// UI window view function

var displayData = function(json){
	
	// Main window view
	var win = Ti.UI.createWindow ({
		backgroundColor: "#000",
		layout: "vertical"
	});
	
	// Background window view
	var background = Ti.UI.createView ({
		backgroundColor: "dff5fb",
		top: 60,
		left: 20,
		right: 20,
		bottom: 170,
		borderRadius: 4,
		borderWeight: 2,
		borderColor: "black"
	});
	
	// Including weather condition icon
	var weatherIcon = Ti.UI.createImageViw ({
		image: json.current_observation.icon_url,
		top: 150
	});
	
	// Feels like temp
	var feels = Ti.UI.createLabel ({
		top: 260,
		left: 20,
		font: {fontSize: 12, fontFamily: "Roboto"},
		text: "Feels like " + json.current.observation.feelslike_f + "F"
	});
	
	var humidity = Ti.UI.createLabel ({
		top: 275,
		left: 20,
		font: {fontSize: 12, fontFamily: "Roboto"},
		text: "Humidity: " + json.current.observation.relative_humidity
	});
	
	var windDir = Ti.UI.createLabel ({
		top: 275,
		right: 20,
		font: {fontSize: 12, fontFamily: "Roboto"},
		text: "Wind direction: " + json.current_observation.wind_dir
	});
	
	win.add(bg);
	bg.add(weatherIcon);
	bg.add(feels);
	bg.add(humidity);
	bg.add(windDir);
	win.open();
};

exports.displayData = displayData;