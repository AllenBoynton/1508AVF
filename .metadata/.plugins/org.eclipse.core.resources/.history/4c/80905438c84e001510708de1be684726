// Function to login to Cloud
var Cloud = require("ti.cloud");
Cloud.debug = true;

var login = function(){	
	Cloud.Users.login({
	    login: "admin",
	    password: "12345"
	}, 
	function (e) {
	console.log(e);
    	if (e.success) {
    		console.log("Cloud saved!");
    		var api = require("api");
        	api.netCheck();
    	} else {
        	alert("Error: " + e.message);		
		}
	});
};
login();

// Export local storage functions
exports.login = login;
